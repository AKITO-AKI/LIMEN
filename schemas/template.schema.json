{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://limen.local/schemas/template.schema.json",
  "title": "LIMEN Motion Template",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "templateId",
    "createdAt",
    "language",
    "intent",
    "params",
    "clipStartSec",
    "clipEndSec",
    "keyframes",
    "bvhText"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "templateId": {
      "type": "string",
      "minLength": 8,
      "maxLength": 128
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "language": {
      "type": "string",
      "enum": ["JSL", "ASL", "CSL"]
    },
    "intent": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["direction", "intensity", "tempo"],
      "properties": {
        "direction": {
          "type": "object",
          "additionalProperties": false,
          "required": ["x", "y", "z"],
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" },
            "z": { "type": "number" }
          }
        },
        "intensity": { "type": "number", "minimum": 0, "maximum": 1 },
        "tempo": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "sourceSessionId": { "type": "string" },
    "clipStartSec": { "type": "number", "minimum": 0 },
    "clipEndSec": { "type": "number", "minimum": 0 },
    "keyframes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["t", "joints"],
        "properties": {
          "t": { "type": "number", "minimum": 0 },
          "joints": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "skeletonClip": { "$ref": "./skeleton.schema.json" },
    "bvhText": {
      "type": "string",
      "minLength": 20
    },
    "ui": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
